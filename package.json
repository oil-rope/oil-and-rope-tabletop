  "description": "The logic under movement and interactions in Oil &amp; Rope's tabletop.",
  "main": "src/index.tsx",
  "scripts": {
    "start": "env-cmd .env if-env NODE_ENV=production ?? npm run start:prod || npm run start:dev",
    "start:dev": "webpack-dev-server --progress --config ./config/webpack/webpack.dev.js",
    "start:prod": "webpack-dev-server --progress --config ./config/webpack/webpack.prod.js",
    "build": "env-cmd .env if-env NODE_ENV=production ?? npm run build:prod || npm run build:dev",
    "build:prod": "webpack --config ./config/webpack/webpack.prod.js",
    "build:dev": "webpack --config ./config/webpack/webpack.dev.js",
    "report": "webpack --config ./config/webpack/webpack.mix.js",
    "lint": "eslint --color .",
    "lint:fix": "eslint --fix .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oil-rope/oilandrope-tabletop.git"
  },
  "keywords": [
    "Oil&Rope",
    "tabletop",
    "rol",
    "roleplay"
