{
  "compilerOptions": {
    "target": "ES3",
    "lib": ["dom", "es2021"],
    "jsx": "react",
    "module": "ESNext",
    "rootDir": ".",
    "baseUrl": "src",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["*"],
      "@Components/*": ["components/*"],
      "@Constants": ["const/globalConst"],
      "@Contexts": ["contexts"],
      "@Utils/*": ["utils/*"]
    },
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true
  }
}
