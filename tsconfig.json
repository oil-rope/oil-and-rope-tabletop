{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "jsx": "react",
    "lib": ["DOM", "ES2015"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "paths": {
      "@/*": ["*"],
      "@Mocks": ["__mocks__"],
      "@Components/*": ["components/*"],
      "@Constants": ["const/globalConst"],
      "@Contexts": ["contexts"],
      "@Utils/*": ["utils/*"],
      "@Interfaces": ["interfaces"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "ES3"
  }
}
